# Flask 配置
SECRET_KEY=your_secret_key_here_at_least_32_characters_long
FLASK_ENV=production

# 任务配置
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT=3600

# 日志配置
LOG_LEVEL=INFO

# Google API 配置
GOOGLE_TOKEN_FILE=/app/data/token.json

# Binance API 配置 (用于测试)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# PostgreSQL 数据库配置
POSTGRES_DB=googlesheet_validator
POSTGRES_USER=validator_user
POSTGRES_PASSWORD=change_this_password_in_production
DATABASE_URL=postgresql://validator_user:change_this_password_in_production@db:5432/googlesheet_validator

# SQLAlchemy 配置
SQLALCHEMY_TRACK_MODIFICATIONS=False
